{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest packages",
    "jest": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "fmt": "prettier --write 'packages/**/*.js' 'packages/**/*.json' './*.json'",
    "lint": "eslint --ext .js,.json --report-unused-disable-directives ./packages/",
    "lint:watch": "node scripts/lint-watch.js",
    "type-check": "tsc --p './tsconfig.json'",
    "type-check:watch": "node scripts/type-check-watch.js",
    "test:all": "yarn test && yarn lint && yarn type-check"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.5.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "transform": {},
    "errorOnDeprecated": true,
    "roots": [
      "packages"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testEnvironmentOptions": {
      "nodeOptions": "--experimental-vm-modules"
    }
  }
}
