{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest packages",
    "jest": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "fmt": "prettier --write 'packages/**/*.js' 'packages/**/*.json' './*.json'",
    "lint": "eslint --ext .js,.json --report-unused-disable-directives ./packages/",
    "type-check": "tsc --p './tsconfig.json'",
    "test:all": "npm test && npm run lint && npm run type-check"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "8.23.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "^29.7.0",
    "prettier": "^2.0.5",
    "prettier-plugin-jsdoc": "^0.4.2",
    "typescript": "^4.0.2"
  },
  "jest": {
    "transform": {},
    "errorOnDeprecated": true,
    "roots": [
      "packages"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testEnvironmentOptions": {
      "nodeOptions": "--experimental-vm-modules"
    }
  }
}
